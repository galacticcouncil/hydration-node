{
  "name": "fakenet-signer",
  "version": "1.3.4",
  "description": "Multi-chain signature orchestrator for Solana - listens for signature requests, executes transactions on target chains (Ethereum, Bitcoin, etc.), and returns results. Includes Bitcoin adapters for mempool.space API and Bitcoin Core RPC.",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist",
    "idl"
  ],
  "scripts": {
    "build": "tsdown",
    "build:watch": "tsdown --watch",
    "start": "tsx src/cli/Run.ts",
    "prepublishOnly": "yarn build",
    "test": "echo \"Error: no test specified\" && exit 1",
    "version:patch": "yarn version --patch --no-git-tag-version",
    "version:minor": "yarn version --minor --no-git-tag-version",
    "version:major": "yarn version --major --no-git-tag-version",
    "version:beta": "yarn version --prerelease --preid=beta --no-git-tag-version",
    "publish:beta": "yarn version:beta && yarn build && yarn publish --tag beta",
    "publish:official": "yarn build && yarn publish"
  },
  "keywords": [
    "solana",
    "ethereum",
    "bitcoin",
    "blockchain",
    "multi-chain",
    "signature",
    "mpc",
    "chain-signatures",
    "cross-chain",
    "web3",
    "psbt",
    "utxo",
    "mempool",
    "bitcoin-core"
  ],
  "author": "",
  "license": "MIT",
  "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e",
  "dependencies": {
    "@coral-xyz/anchor": "^0.31.0",
    "@solana/web3.js": "^1.98.0",
    "bitcoin-core": "^5.0.0",
    "bitcoinjs-lib": "^6.1.5",
    "borsh": "^2.0.0",
    "bs58": "^6.0.0",
    "dotenv": "^17.2.3",
    "ecpair": "^2.1.0",
    "ethers": "^6.13.5",
    "tiny-secp256k1": "^2.2.3",
    "tsx": "^4.19.2",
    "zod": "^4.1.11",
    "@polkadot/api": "^16.4.6",
    "@polkadot/types": "^16.4.6",
    "@polkadot/util-crypto": "^13.5.6"
  },
  "devDependencies": {
    "tsdown": "^0.15.6"
  }
}
